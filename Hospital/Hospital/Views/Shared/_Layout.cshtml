<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SISTEMA HOSPITALARIO LM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>. . . . . . . . . . . . . . . . . . .  . . . . . . . .</li>
                    <li>@Html.ActionLink("INICIO", "Index", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            MANTENIMIENTOS
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Habitaciones", "Index", "Habitaciones")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Medicos", "Index", "Medicos")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Pacientes", "Index", "Pacientes")</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            FUNCIONES
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Ingresos", "Index", "Ingresos")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Alta Medica", "Index", "AltaMedica")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Citas", "Index", "Citas")</a>


                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            CONSULTAS
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">@Html.ActionLink("Alta Medica", "AltaMedica", "Consultas")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Ingresos", "Ingresos", "Consultas")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Citas", "Citas", "Consultas")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Medicos", "Medicos", "Consultas")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Pacientes", "Pacientes", "Consultas")</a><br />
                            <a class="dropdown-item" href="#">@Html.ActionLink("Habitaciones", "Habitaciones", "Consultas")</a>

                        </div>
                    </li>
                    <li>@Html.ActionLink("CONTACTO", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")

    @RenderSection("scripts", required: false)
</body>
</html>
